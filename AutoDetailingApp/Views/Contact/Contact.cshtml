@using AutoDetailingApp.Web.ViewModels 
@model ContactFormModel

@section Styles{
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/contacts.css">
}

@{
    ViewData["Title"] = "Контакти";
}

<div class="main-page">
    <h1>Контакти</h1>
    <h2>Свържете се с нас!</h2>
    <button onclick="window.open('https://www.google.com/maps/place/Pazardzhik', '_blank')">Локация</button>
</div>

<hr>
@if (TempData["SuccessMessage"] != null)
{
    <div class="success-message">
        @TempData["SuccessMessage"]
    </div>
}

    <div class="contacts-page">
        <div class="contacts-info">
        <button onclick="window.location.href='tel:+359882857912'"><i class="fas fa-phone"></i>&nbsp;0882 857 912</button>
        <button onclick="window.open('https://www.google.com/maps/place/Pazardzhik', '_blank')"><i class="fas fa-map-marker-alt"></i>&nbsp;гр. Пазарджик</button>
        <button onclick="window.location.href='mailto:vivodetailing@gmail.com'">vivodetailing@gmail.com</button>
        <button onclick="window.open('https://www.instagram.com/vivodetailing', '_blank')"><i class="fab fa-instagram"></i></button>
        </div>
    </div>
    <div class="closing-page">
        <div class="closing-content">
            <div class="closing-text">
                <h1>Всяка услуга предлагана от нас се изпълнява до последния детайл.</h1>
                <h2>Елате и се убедете сами!</h2>
            </div>

            <div class="contact-form">
                <h3>Свържи се с нас</h3>
            <form class="compact-form" method="post">
                <div class="form-group">
                    <input asp-for = "Name" class="form-control" placeholder="Име">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for = "PhoneNumber" class="form-control" placeholder="Телефон">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for = "Email" class="form-control" placeholder="Имейл">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group full-width">
                    <textarea asp-for = "Question" class="form-control" rows="3" placeholder="Вашият въпрос..."></textarea>
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>
                <button type="submit" class="submit-btn">Изпрати</button>
            </form>
        </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}