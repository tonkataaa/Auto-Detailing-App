@{
    // ViewData["PageUrl"] = "https://vivodetailing.bg/"; 
    // ViewData["OgImage"] = "https://vivodetailing.bg/images/og-default.jpg"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="title" content="@ViewData["Title"]" />
    <meta name="description" content="@ViewData["MetaDescription"]" />
    <meta name="keywords" content="@ViewData["MetaKeywords"]" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["MetaDescription"]" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoDetailingApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="navigation" id="mainNavbar">
            <nav>
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Vivo Detailing</a>
                </div>
                <div class="burger-menu" id="burger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <ul id="navLinks">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
                    <li><a asp-area="" asp-controller="Service" asp-action="Service">Услуги</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AboutUs">За нас</a></li>
                    <li><a asp-area="" asp-controller="Contact" asp-action="Contact">Контакти</a></li>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a class="login-link" asp-area="Identity" asp-page="/Account/Login">Логин</a></li>
                    }
                    else
                    {
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" id="logoutForm" class="d-inline">
                                <button type="submit" class="login-link btn btn-link" style="padding: 0; border: none; background: none;">Излез</button>
                            </form>
                        </li>
                    }

                    <li><a asp-area="" asp-controller="Reservation" asp-action="Reservation" class="login-link">Резервирай час</a></li>
                    <li><a href="https://www.instagram.com/vivodetailing/" target="_blank"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="vivo-footer">
        <div class="footer-container">
            <div class="footer-column">
                <h3>РАБОТНО ВРЕМЕ</h3>
                <p>Понеделник – Петък<br>8:00 – 17:00</p>
                <p>Събота<br>8:00 – 17:00</p>
                <p>Неделя<br>Затворено</p>
            </div>
            <div class="footer-column">
                <h3>ИЗПИТА ЛИ НАСЛАДА ОТ УСЛУГАТА?</h3>
                <p>Ще се радваме да ни оставиш мнение в <a href="https://www.instagram.com/vivodetailing/" target="_blank">Instagram!</a></p>
            </div>
            <div class="footer-column">
                <h3>VIVO DETAILING</h3>
                <p>с. Огняново, България</p>
                <p>Email: info@vivodetailing.bg</p>
                <p>Телефон: 089 8388487</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© 2025 Vivo Detailing. Всички права запазени.</p>
        </div>
    </footer>

    <script src="~/js/navigation.js" asp-append-version="true"></script>
    <script src="~/js/burgerMenu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
